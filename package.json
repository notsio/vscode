{
	"name": "nots-io",
	"displayName": "nots.io",
	"description": "VSCode integration with Nots.io service",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"eslint": "^5.13.0",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42",
		"request-promise": "^4.2.2",
		"ssl-root-cas": "^1.3.1"
	},
	"contributes": {
		"configuration": {
			"title": "Nots.io",
			"properties": {
				"nots-io.apiKey": {
					"type": "string",
					"default": "",
					"description": "Your Nots.io API key (Workspace setting only!)"
				},
				"nots-io.projectApiKey": {
					"type": "string",
					"default": "",
					"description": "Project's API key (Workspace setting only!)"
				},
				"nots-io.lightBgColor": {
					"type": "string",
					"default": "#eee",
					"description": "Highlight color for light color theme"
				},
				"nots-io.darkBgColor": {
					"type": "string",
					"default": "#333",
					"description": "Highlight color for dark color theme"
				}
			}
		},
		"commands": [
			{
				"command": "extension.toggleNots",
				"title": "Nots.io: Toggle Nots"
			},
			{
				"command": "extension.openNots",
				"title": "Open Nots.io for the Note",
				"icon": {
					"light": "./images/logo_bw.png",
					"dark": "./images/logo_bw.png"
				}
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.openNots",
					"group": "navigation"
				}
			]
		}
	}
}